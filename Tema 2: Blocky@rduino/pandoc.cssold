/*
 * I add this to html files generated with pandoc.
 */

.tip {
  padding: 10px;
  padding-left: 15px;
  font-size: 1em;
  background-color: #27E717; /* Red */
  color: white;
  margin-bottom: 10px;
  border-radius: 15px;


}

.tip:before {
    display: block;
/*    font-style: normal;
    font-variant: normal;*/
    width: 20px;
    height: 20px;
    float: left;
    text-rendering: auto;
    font-size: 2em;
    -webkit-font-smoothing: antialiased;
    /*font-family: "Font Awesome 5 Free";*/ font-weight: 900; content: "\279C";

    
}

.tip p {
    margin-left: 50px;
    padding-left: 15px;
    display: block;
    border-left: solid;
}

